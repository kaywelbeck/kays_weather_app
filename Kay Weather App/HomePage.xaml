<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kay_Weather_App.HomePage"
             Title="HomePage"
             BackgroundColor="#515151">

    <StackLayout VerticalOptions="Center" 
             Margin="20"
             Spacing="0">
        <Image Source="kay_logo_yellow"
          HeightRequest="200"
          WidthRequest="200" />
        <Label Text="Kay's"
           FontSize="40"
           TextColor="#ffca28" />
        <Label Text="Weather App."
           FontSize="40"
           TextColor="White" />
        <Button Text="Check Weather"
            FontSize="Large"
            TextColor="black"
            BackgroundColor="#ffca28"
            WidthRequest="250"
            Margin="0,50,0,0"
            x:Name="BtnProceed" 
            Clicked="BtnProceed_Clicked"/>

    </StackLayout>
</ContentPage>